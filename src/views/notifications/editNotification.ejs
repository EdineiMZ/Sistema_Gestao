<%- include('../partials/header') %>

<% const availableRoles = roleOptions || []; %>
<% const filters = notif.filters || {}; %>
<% const toDateTimeLocal = (value) => {
    if (!value) return '';
    const date = new Date(value);
    if (isNaN(date)) return '';
    const offset = new Date(date.getTime() - date.getTimezoneOffset() * 60000);
    return offset.toISOString().slice(0, 16);
}; %>
<% const includeProfessional = filters.includeProfessional !== false; %>
<% const includeClient = filters.includeClient !== false; %>
<% const onlyActive = filters.onlyActive !== false; %>

<div class="row justify-content-center fade-in">
    <div class="col-12 col-xl-10">
        <div class="card card-soft p-4">
            <div class="d-flex flex-wrap justify-content-between align-items-center mb-4">
                <div>
                    <h2 class="fw-semibold mb-1">Editar notificação</h2>
                    <p class="text-muted mb-0">Atualize conteúdo, filtros e janela de envio com segurança.</p>
                </div>
                <a href="/notifications" class="btn btn-outline-secondary rounded-pill"><i class="bi bi-arrow-left"></i> Voltar</a>
            </div>

            <form action="/notifications/update/<%= notif.id %>?_method=PUT" method="POST" class="needs-validation" novalidate>
                <fieldset class="scheduler-border">
                    <legend class="scheduler-border">Conteúdo</legend>
                    <div class="row g-3">
                        <div class="col-md-8">
                            <label class="form-label">Título / assunto</label>
                            <input type="text" class="form-control" name="title" value="<%= notif.title %>" required />
                        </div>
                        <div class="col-md-4">
                            <label class="form-label">Cor de destaque</label>
                            <input type="color" class="form-control form-control-color" name="accentColor" value="<%= notif.accentColor %>" />
                        </div>
                        <div class="col-md-12">
                            <label class="form-label">Mensagem (texto plano)</label>
                            <textarea class="form-control" name="message" rows="3" required><%= notif.message %></textarea>
                            <div class="form-text">Placeholders disponíveis: %USUARIO%, %AGENDAMENTO_DATA%, %USER_CREDIT%, %ORGANIZACAO%.</div>
                        </div>
                        <div class="col-md-12">
                            <label class="form-label">Mensagem rica (HTML opcional)</label>
                            <textarea class="form-control" name="messageHtml" rows="4"><%= notif.messageHtml || '' %></textarea>
                        </div>
                        <div class="col-md-12">
                            <label class="form-label">Texto de pré-visualização</label>
                            <input type="text" class="form-control" name="previewText" maxlength="120" value="<%= notif.previewText || '' %>" />
                        </div>
                    </div>
                </fieldset>

                <fieldset class="scheduler-border">
                    <legend class="scheduler-border">Agendamento</legend>
                    <div class="row g-3 align-items-end">
                        <div class="col-md-4">
                            <label class="form-label">Data e hora de disparo</label>
                            <input type="datetime-local" class="form-control" name="triggerDate" value="<%= toDateTimeLocal(notif.triggerDate) %>" />
                            <div class="form-text" data-schedule-preview>
                                <%= notif.triggerDate ? new Date(notif.triggerDate).toLocaleString('pt-BR') : 'Disparo imediato após salvar' %>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <label class="form-label">Recorrência</label>
                            <select class="form-select" name="repeatFrequency">
                                <% Object.entries(frequencyLabels).forEach(([value, label]) => { %>
                                    <option value="<%= value %>" <%= notif.repeatFrequency === value ? 'selected' : '' %>><%= label %></option>
                                <% }) %>
                            </select>
                        </div>
                        <div class="col-md-4">
                            <label class="form-label">Tipo</label>
                            <select class="form-select" name="type">
                                <option value="custom" <%= notif.type === 'custom' ? 'selected' : '' %>>Custom</option>
                                <option value="birthday" <%= notif.type === 'birthday' ? 'selected' : '' %>>Aniversário</option>
                                <option value="appointment" <%= notif.type === 'appointment' ? 'selected' : '' %>>Agendamento</option>
                            </select>
                        </div>
                        <div class="col-md-4">
                            <label class="form-label">Enviar para usuário específico</label>
                            <select class="form-select" name="userId">
                                <option value="">Nenhum</option>
                                <% users.forEach(u => { %>
                                    <option value="<%= u.id %>" <%= notif.userId === u.id ? 'selected' : '' %>><%= u.name %> (ID <%= u.id %>)</option>
                                <% }) %>
                            </select>
                        </div>
                        <div class="col-md-4">
                            <div class="form-check form-switch">
                                <input class="form-check-input" type="checkbox" role="switch" id="sendToAll" name="sendToAll" value="true" <%= notif.sendToAll ? 'checked' : '' %> />
                                <label class="form-check-label" for="sendToAll">Enviar para todos os usuários</label>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-check form-switch">
                                <input class="form-check-input" type="checkbox" role="switch" id="active" name="active" value="true" <%= notif.active ? 'checked' : '' %> />
                                <label class="form-check-label" for="active">Notificação ativa</label>
                            </div>
                        </div>
                    </div>
                </fieldset>

                <fieldset class="scheduler-border">
                    <legend class="scheduler-border">Filtros avançados</legend>
                    <div class="row g-3">
                        <div class="col-md-4">
                            <label class="form-label">Perfis alvo</label>
                            <select class="form-select" name="targetRoles" multiple>
                                <% availableRoles.forEach((option) => { %>
                                    <option
                                        value="<%= option.value %>"
                                        <%= filters.targetRoles && filters.targetRoles.includes(option.value) ? 'selected' : '' %>
                                    >
                                        <%= option.label %>
                                    </option>
                                <% }) %>
                            </select>
                        </div>
                        <div class="col-md-4">
                            <label class="form-label">Crédito mínimo</label>
                            <input type="number" step="0.01" class="form-control" name="minimumCreditBalance" value="<%= filters.minimumCreditBalance ?? '' %>" />
                        </div>
                        <div class="col-md-4">
                            <label class="form-label">Domínio de e-mail do cliente</label>
                            <input type="text" class="form-control" name="clientEmailDomain" value="<%= filters.clientEmailDomain || '' %>" />
                        </div>
                        <div class="col-md-4">
                            <label class="form-label">Status do agendamento</label>
                            <select class="form-select" name="appointmentStatus" multiple>
                                <% ['scheduled','completed','cancelled','no-show','pending-confirmation'].forEach(status => { %>
                                    <option value="<%= status %>" <%= filters.appointmentStatus && filters.appointmentStatus.includes(status) ? 'selected' : '' %>><%= status %></option>
                                <% }) %>
                            </select>
                        </div>
                        <div class="col-md-4">
                            <label class="form-label">Janela (minutos)</label>
                            <input type="number" class="form-control" name="timeWindowMinutes" min="5" step="5" value="<%= filters.timeWindowMinutes || '' %>" />
                        </div>
                        <div class="col-md-4">
                            <label class="form-label">Procedimento específico</label>
                            <select class="form-select" name="procedureId">
                                <option value="">Todos</option>
                                <% procedures.forEach(proc => { %>
                                    <option value="<%= proc.id %>" <%= filters.procedureId === proc.id ? 'selected' : '' %>><%= proc.name %></option>
                                <% }) %>
                            </select>
                        </div>
                        <div class="col-md-4">
                            <label class="form-label">Sala específica</label>
                            <select class="form-select" name="roomId">
                                <option value="">Todas</option>
                                <% rooms.forEach(room => { %>
                                    <option value="<%= room.id %>" <%= filters.roomId === room.id ? 'selected' : '' %>><%= room.name %></option>
                                <% }) %>
                            </select>
                        </div>
                        <div class="col-md-4">
                            <label class="form-label">Início do período</label>
                            <input type="datetime-local" class="form-control" name="dateRangeStart" value="<%= toDateTimeLocal(filters.dateRangeStart) %>" />
                        </div>
                        <div class="col-md-4">
                            <label class="form-label">Fim do período</label>
                            <input type="datetime-local" class="form-control" name="dateRangeEnd" value="<%= toDateTimeLocal(filters.dateRangeEnd) %>" />
                        </div>
                        <div class="col-md-4 d-flex align-items-center">
                            <div class="form-check form-switch me-4">
                                <input class="form-check-input" type="checkbox" role="switch" id="onlyActive" name="onlyActive" value="true" <%= onlyActive ? 'checked' : '' %> />
                                <label class="form-check-label" for="onlyActive">Somente usuários ativos</label>
                            </div>
                        </div>
                        <div class="col-md-4 d-flex align-items-center">
                            <div class="form-check form-switch me-4">
                                <input class="form-check-input" type="checkbox" role="switch" id="includeProfessional" name="includeProfessional" value="true" <%= includeProfessional ? 'checked' : '' %> />
                                <label class="form-check-label" for="includeProfessional">Enviar ao profissional</label>
                            </div>
                        </div>
                        <div class="col-md-4 d-flex align-items-center">
                            <div class="form-check form-switch">
                                <input class="form-check-input" type="checkbox" role="switch" id="includeClient" name="includeClient" value="true" <%= includeClient ? 'checked' : '' %> />
                                <label class="form-check-label" for="includeClient">Enviar ao cliente</label>
                            </div>
                        </div>
                    </div>
                </fieldset>

                <div class="d-flex justify-content-end gap-3">
                    <a href="/notifications" class="btn btn-outline-secondary">Cancelar</a>
                    <button type="submit" class="btn btn-gradient">Salvar alterações</button>
                </div>
            </form>
        </div>
    </div>
</div>

<%- include('../partials/footer') %>
