                                            action="/finance/delete/<%= entry.id %>?_method=DELETE"
                                            method="POST"
                                            class="d-inline"
                                        >
                                            <button class="btn btn-outline-danger btn-sm" type="submit">
                                                <i class="bi bi-trash me-1"></i>Excluir
                                            </button>
                                        </form>
